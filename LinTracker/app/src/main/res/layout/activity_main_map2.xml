<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMap2Act">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="-8.169121"
        mapbox:mapbox_cameraTargetLng="113.702312"
        mapbox:mapbox_cameraZoom="13">

    </com.mapbox.mapboxsdk.maps.MapView>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_solid_white"
        android:gravity="center"
        android:orientation="vertical"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintEnd_toEndOf="@+id/mapView">

        <ImageView
            android:id="@+id/tengah"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/center_direction" />

    </LinearLayout>

    <View
        android:id="@+id/profilBorder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle_border_grey"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.florent37.shapeofview.shapes.CircleView
        android:id="@+id/profil_shape"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/profilBorder"
        app:layout_constraintEnd_toEndOf="@+id/profilBorder"
        app:layout_constraintStart_toStartOf="@+id/profilBorder"
        app:layout_constraintTop_toTopOf="@+id/profilBorder">

        <ImageView
            android:id="@+id/profil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_nopic" />

    </com.github.florent37.shapeofview.shapes.CircleView>

</androidx.constraintlayout.widget.ConstraintLayout>